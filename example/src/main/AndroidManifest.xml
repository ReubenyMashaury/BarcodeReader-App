<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.androidhive.barcodereader">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/dail"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AddPurchaseActivity"></activity>
        <activity
            android:name=".RegistrationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BarcodeScanRegisterItemActivity" />
        <activity
            android:name=".ActivityMain"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BarcodeScanSellActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BarcodeFragmentTestActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>